<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="#f0e680">



    <Button
            android:id="@+id/btn_quiz_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:text="Home"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
            android:id="@+id/btn_quiz_restart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_orange_light"
            android:text="Restart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/txt_notice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="단어와 맞는 뜻을 고르세요."
            android:textSize="23dp"
            app:layout_constraintBottom_toTopOf="@+id/constraint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/txt_notice_ex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아래쪽 임의의 버튼을 눌러 시작하세요."
            android:textSize="20dp"
            app:layout_constraintBottom_toTopOf="@+id/constraint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    <TextView
            android:id="@+id/txt_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="50dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/constraint"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="350dp"
            android:id="@+id/constraint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="#FFFACD">

        <Button
                android:id="@+id/btn_answer_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF8C00"
                android:text="1"
                app:layout_constraintBottom_toTopOf="@id/btn_answer_four"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_answer_two"
                app:layout_constraintTop_toTopOf="parent" />

        <Button
                android:id="@+id/btn_answer_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF8C00"
                android:text="2"
                app:layout_constraintBaseline_toBaselineOf="@id/btn_answer_one"
                app:layout_constraintLeft_toRightOf="@id/btn_answer_one"
                app:layout_constraintRight_toLeftOf="@id/btn_answer_three" />

        <Button
                android:id="@+id/btn_answer_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF8C00"
                android:text="3"
                app:layout_constraintBaseline_toBaselineOf="@id/btn_answer_two"
                app:layout_constraintLeft_toRightOf="@id/btn_answer_two"
                app:layout_constraintRight_toRightOf="parent" />

        <Button
                android:id="@+id/btn_answer_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF8C00"
                android:text="4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/btn_answer_five"
                app:layout_constraintTop_toBottomOf="@id/btn_answer_one" />

        <Button
                android:id="@+id/btn_answer_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#FF8C00"
                android:text="5"
                app:layout_constraintBaseline_toBaselineOf="@id/btn_answer_four"
                app:layout_constraintLeft_toRightOf="@id/btn_answer_four"
                app:layout_constraintRight_toRightOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>



